<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.effect.DropShadow?>
<HBox xmlns:fx="http://javafx.com/fxml"
      spacing="15" alignment="CENTER"
      style="-fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 10;">

    <VBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="deckNameLabel" textFill="black" wrapText="true" alignment="BOTTOM_CENTER"/>
                <Label fx:id="deckName" textFill="black" wrapText="true" alignment="TOP_CENTER"/>
            </VBox>
        </HBox>
    </VBox>

    <VBox spacing="10" alignment="CENTER">
        <Button fx:id="buttonDelete" style="-fx-background-color: red; -fx-text-fill: white;">
            <effect>
                <DropShadow offsetX="3.0" offsetY="3.0" color="black" />
            </effect>
        </Button>
        <Button fx:id="buttonRestore" style="-fx-background-color: green; -fx-text-fill: white;">
            <effect>
                <DropShadow offsetX="3.0" offsetY="3.0" color="black" />
            </effect>
        </Button>
    </VBox>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</HBox>
