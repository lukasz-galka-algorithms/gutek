<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import gutek.gui.controls.NumberTextField?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="gutek.gui.controllers.deck.RevisionFXMLController">

    <top>
        <VBox fx:id="menuContainer" />
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <HBox spacing="10" alignment="CENTER">
                <Label fx:id="newCardsPerDayLabel" alignment="CENTER_RIGHT"/>
                <NumberTextField fx:id="newCardsPerDayTextField" />
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label fx:id="regularNewCardsLabel" alignment="CENTER" textFill="blue"/>
                <Label fx:id="regularOldCardsLabel" alignment="CENTER" textFill="red"/>
            </HBox>
            <Button fx:id="regularRevisionButton"/>

            <HBox spacing="10" alignment="CENTER">
                <Label fx:id="reverseNewCardsLabel" alignment="CENTER" textFill="blue"/>
                <Label fx:id="reverseOldCardsLabel" alignment="CENTER" textFill="red"/>
            </HBox>
            <Button fx:id="reverseRevisionButton"/>
        </VBox>
    </center>
</BorderPane>
